<div>
  <h1><%= @list.name %></h1>
</div>
<div>
  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %>
</div>
<div>
  <ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %>
    <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark for #{bookmark.movie.title}?"} %></li>
  <% end %>
  </ul>
  <hr>
</div>
<div>
  <%= link_to "Back to lists", lists_path %>
</div>
